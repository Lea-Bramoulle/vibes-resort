
<!DOCTYPE html>
<html>
<head>
  <title>Vibes Resort - Cap d'Agde</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <meta name="description" content="Découvrez Vibes Resort, nouvelle résidence de luxe à vocation touristique située dans le village naturiste du Cap d'Agde. De la chambre T1 à la suite 4 pièces. Contactez-nous !" />

  <script src="https://kit.fontawesome.com/2f609438b2.js" crossorigin="anonymous"></script>


</head>

<body>


  <!-- ======= Header ======= -->
  <header id="header">

    <div class=" row mx-auto">
      <div class="col-2 ml-4 pl-4">
        <%= link_to image_tag( 'vibes-resort-logo2.png'), root_path%>
      </div>

      <div class="col-9" class="container" style="justify-content:space-between;">
        <ul >
          <li style=" display: inline-block;
          vertical-align: middle"><%= link_to "Le Village", root_path(anchor:"village") , class:"p-2 nav-item"%></li>
          <li style="  display: inline-block;
          vertical-align: middle"><%= link_to "L'Architecture", root_path(anchor:"architecture"), class:"p-2 nav-item" %></li>
          <li style="  display: inline-block;
          vertical-align: middle"><%= link_to "Les Appartements", root_path(anchor:"appartements") , class:"p-2 nav-item"%></li>
          <li style="  display: inline-block;
          vertical-align: middle"><%= link_to "Le Rooftop", root_path(anchor:"rooftop") , class:"p-2 nav-item"%></li>
          <li style="  display: inline-block;
          vertical-align: middle"><%= link_to "Devenir Propriétaire", root_path(anchor:"proprietaire"), class:"p-2 nav-item" %></li>
          <li style="  display: inline-block;
          vertical-align: middle"><%= link_to "Nous contacter", root_path(anchor:"contact"), class:"p-2 btn-get-started" %></li>
          <li style="  display: inline-block;
          vertical-align: middle"><%= link_to "Télécharger la Plaquette", new_plaquette_path, class:"p-2 btn-invers" %></li>
        </ul>
      </div>

    </div>


  </header><!-- End Header -->


  <%= yield %>

  <a href="#"><i class="fas fa-chevron-circle-up btn-up fa-2x"></i></a>


  <!-- ======= Footer ======= -->

  <footer id="footer">

    <div class="container">
      <div class="copyright">
        Tous droits réservés – <strong>SCCV VIBES RESORT</strong> – 790 452 452 RCS Béziers
      </div>
      <div class="credits">
        Illustrations à caractère d’ambiance © A+ Architecture, Golem Images, We Love Design – Photos © Shutterstock
      </div>
      <div class="credits">
        <% if user_signed_in?%>
        <%= link_to "Back-Office",         contact_index_path, class:"pr-4" %>
        <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete%>
        <%else%>
        <%= link_to "Se connecter", user_session_path %>
        <%end%>
      </div>
    </div>
  </footer><!-- End Footer -->

</body>
</html>
